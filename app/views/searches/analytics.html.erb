    <% @top_searches.each do |query, count| %>
      <li><%= query %> - <%= count %></li>
    <% end %>
  <% else %>
    <li>No searches available.</li>
  <% end %>
</ul>


  <h2>Recent Searches</h2>
  <ul>
    <% @recent_searches.each do |log| %>
      <li><%= log.query %> at <%= log.created_at %></li>
    <% end %>
  </ul>

  <h2>Search Trends Over Time</h2>
  <div class="chart-container">
    <canvas id="searchTrendsChart"></canvas>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const ctx = document.getElementById('searchTrendsChart').getContext('2d');
      const labels = <%= raw @search_trends[:labels].to_json %>;
      const values = <%= raw @search_trends[:values].to_json %>;

      const drawChart = () => {
        ctx.clearRect(0, 0, ctx.canvas.width, ctx.canvas.height);
        ctx.beginPath();
        ctx.moveTo(0, ctx.canvas.height - values[0]);
        for (let i = 1; i < labels.length; i++) {
          const x = i * (ctx.canvas.width / labels.length);
          const y = ctx.canvas.height - values[i];
          ctx.lineTo(x, y);
        }
        ctx.strokeStyle = '#4CAF50';
        ctx.lineWidth = 2;
        ctx.stroke();
      };

      drawChart();
    });
  </script>
</body>
</html>
