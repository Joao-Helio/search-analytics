<!DOCTYPE html>
<html>
<head>
  <title>Search Analytics</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css", media: "all", crossorigin: "anonymous" %>
  <%= javascript_importmap_tags %>
  <style>
    body {
      background-color: #f7f9fc;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1>Search Analytics</h1>

    <div class="mt-4">
      <h5>Top Searches (All Time)</h5>
      <% if @top_queries.present? %>
        <ul class="list-group">
          <% @top_queries.each do |query, count| %>
            <li class="list-group-item">
              <%= query %> - <%= count %> searches
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No top searches found.</p>
      <% end %>
    </div>

    <div class="mt-4">
      <h5>Top Searches (This Week)</h5>
      <% if @top_queries_week.present? %>
        <ul class="list-group">
          <% @top_queries_week.each do |query, count| %>
            <li class="list-group-item">
              <%= query %> - <%= count %> searches
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No top searches found.</p>
      <% end %>
    </div>

    <div class="mt-4">
      <h5>Top Searches (This Month)</h5>
      <% if @top_queries_month.present? %>
        <ul class="list-group">
          <% @top_queries_month.each do |query, count| %>
            <li class="list-group-item">
              <%= query %> - <%= count %> searches
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No top searches found.</p>
      <% end %>
    </div>

    <div class="mt-4">
      <h5>Recent Searches</h5>
      <% if @recent_searches.present? %>
        <ul class="list-group">
          <% @recent_searches.each do |search| %>
            <li class="list-group-item">
              <%= search.query %> - <%= search.created_at.strftime("%b %d, %Y %H:%M") %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No recent searches found.</p>
      <% end %>
    </div>

    <div class="mt-3">
      <%= link_to 'Return to Search', root_path, class: 'btn btn-secondary', style: 'margin-bottom: 20px;' %>
    </div>
  </div>
</body>
</html>
